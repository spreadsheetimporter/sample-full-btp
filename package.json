{
    "name": "cpapp",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^4",
        "express": "^4",
        "mbt": "^1.2.28",
        "passport": "^0",
        "rimraf": "5.0.7",
        "@cap-js/sqlite": "^1",
        "@sap/ux-specification": "^1.120.13",
        "cds-plugin-ui5": "0.9.3"
    },
    "engines": {
        "node": "^18"
    },
    "scripts": {
        "start:serve": "cds watch",
        "start": "cds-serve",
        "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-mitigations": "cds watch --open ns.mitigations/index.html",
        "start-instance-hana": "cf update-service cpapp -c '{'data':{'serviceStopped':false}}'",
        "undeploy": "cf undeploy cpapp --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "sapux": [
        "app/risks",
        "app/mitigations"
    ],
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": "xsuaa"
            },
            "db": {
                "kind": "sql"
            }
        }
    },
    "workspaces": [
        "app/*"
    ]
}
